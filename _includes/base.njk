---
sitetitle: christopher bruton
title: base
ogimage: /img/defaultsplash.jpg
base_url: https://bruton.tech/
---
{%- if ogdescription -%}
{%- set ogdescription = ogdescription -%}
{%- else -%}
{%- set ogdescription = content | striptags | trim | truncate(155) -%}
{%- endif -%}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{{ title }} : {{ sitetitle }}</title>
    <link rel="alternate" type="application/atom+xml" href="/feed.xml" title="Atom feed">
    <link rel="icon" type="image/png" sizes="32x32" href="/img/favicon-32x32.png">
    <meta name="description" content="{{ ogdescription }}">
    <meta property="og:url" content="{{ page.url | absoluteUrl(base_url) }}">
    <meta property="og:type" content="website">
    <meta property="og:title" content="{{ title }}">
    <meta property="og:description" content="{{ ogdescription }}">
    <meta property="og:image" content="{{ ogimage | absoluteUrl(base_url) }}">
    <meta property="og:locale" content="en_US">
    <meta property="og:site_name" content="bruton.tech : christopher bruton">
    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Cormorant&display=swap" rel="stylesheet">
{% set css %}
  {% include "style.css" %}
{% endset %}
    <style>
      {{ css | cssmin | safe }}
    </style>
</head>

<body>
    <div id="header-container">
        <h1>Christopher P. Bruton</h1>
        <nav>
            <div><a href="/">home</a></div>
            <div><a href="/bio/">bio</a></div>
            <div><a href="/now/">now</a></div>
            <div><a href="/journal/">journal</a></div>
        </nav>
    </div>
    <main>
      {{ content | smartquotes | safe }}
    </main>

    <footer id="page-footer">
        <p>&copy; 2021 Christopher P. Bruton</p>
    </footer>
<script data-goatcounter="https://cpb.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
</body>
</html>
